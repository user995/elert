<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp"
            android:id="@+id/missedEvent"
            android:src="@drawable/ic_call_missed_black_36dp"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="James Filmer" android:id="@+id/tvNotPerson"
              android:paddingLeft="20dp" android:textSize="18sp"
              android:paddingTop="10dp"
              android:layout_toEndOf="@+id/missedEvent"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Date: " android:id="@+id/tvNotDate"
              android:textSize="12sp" android:paddingLeft="30dp"
              android:layout_below="@+id/tvNotLocation" android:layout_toEndOf="@+id/missedEvent"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Location: " android:id="@+id/tvNotLocation"
              android:paddingLeft="30dp" android:textSize="12sp"
              android:layout_below="@+id/tvNotPerson" android:layout_toEndOf="@+id/missedEvent"/>


</RelativeLayout>