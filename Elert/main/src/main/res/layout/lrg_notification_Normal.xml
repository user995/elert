<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/LrgNotiLayout">
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent" android:layout_toEndOf="@+id/imageView4">


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Elert"
                    android:id="@+id/textView" android:textColor="@android:color/black"
                    android:layout_centerVertical="true" android:layout_marginLeft="20dp"/>
        </RelativeLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_weight="0" android:showDividers="middle" android:divider="?android:listDivider"
                      android:layout_marginLeft="10dp" android:layout_marginBottom="10dp">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:layout_weight="1" android:id="@+id/rlLrgNotiNear"
                            android:clickable="true">
                <ImageView android:layout_width="24dp" android:layout_height="24dp"
                           android:src="@drawable/ic_warning_black_24dp"
                           android:id="@+id/imageView2"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="Alert Nearby" android:layout_centerVertical="true"
                          android:layout_toEndOf="@+id/imageView2" android:paddingLeft="10dp"
                          android:textColor="@android:color/black"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:layout_weight="1" android:id="@+id/rlLrgNotiSet"
                            android:clickable="true">
                <ImageView android:layout_width="24dp" android:layout_height="24dp"
                           android:src="@drawable/ic_contacts_black_24dp"
                           android:id="@+id/imageView3"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="Alert Set" android:layout_centerVertical="true"
                          android:layout_toEndOf="@+id/imageView3" android:paddingLeft="10dp"
                          android:textColor="@android:color/black"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView4" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:src="@drawable/logo2" android:layout_margin="10dp"/>
</RelativeLayout>