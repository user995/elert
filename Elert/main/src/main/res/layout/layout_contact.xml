<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:civ_border_color="#FF000000"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp"
            android:id="@+id/imgConImage"
            android:src="@drawable/placeholder"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="James Filmer" android:id="@+id/tvConName" android:layout_alignTop="@+id/imgConImage"
              android:layout_toEndOf="@+id/imgConImage" android:layout_alignParentEnd="false"
              android:paddingLeft="20dp" android:textSize="18sp"/>

</RelativeLayout>