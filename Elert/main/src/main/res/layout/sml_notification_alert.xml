<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/SmlNotiAlertLayout"
                android:layout_width="fill_parent"
                android:layout_height="64dp" android:background="#d32f2f">
    <ImageView android:id="@+id/imgAlertContact"
               android:layout_margin="10dp"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:layout_centerVertical="true"
               android:layout_alignParentLeft="true"
               android:layout_marginRight="10dp" android:src="@drawable/placeholder"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="James needs you"
            android:id="@+id/tvAlertMessage" android:layout_alignParentTop="false"
            android:layout_toEndOf="@id/imgAlertContact"
            android:layout_centerVertical="true" android:textColor="@android:color/black"
            android:layout_alignParentEnd="false"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/ivSmlNotiCall"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_call_black_24dp" android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" android:clickable="true"
            android:background="?android:selectableItemBackground"
            android:contentDescription="Alert Closest"/>
</RelativeLayout>