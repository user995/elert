<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/SmlNotiLayout"
                android:layout_width="fill_parent"
                android:layout_height="64dp">
    <ImageView android:id="@+id/image"
               android:layout_margin="10dp"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:layout_alignParentLeft="true"
               android:layout_marginRight="10dp" android:src="@drawable/logo2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Elert"
            android:id="@+id/tvName" android:layout_alignParentTop="false" android:layout_toEndOf="@+id/image"
            android:layout_centerVertical="true" android:textColor="@android:color/black"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/ivSmlNotiClosest"
            android:src="@drawable/ic_warning_black_24dp"
            android:layout_marginRight="20dp" android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/ivSmlNotiSet" android:clickable="true"
            android:background="?android:selectableItemBackground"
            android:contentDescription="Alert Set"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/ivSmlNotiSet"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_contacts_black_24dp" android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" android:clickable="true"
            android:background="?android:selectableItemBackground"
            android:contentDescription="Alert Closest"/>
</RelativeLayout>