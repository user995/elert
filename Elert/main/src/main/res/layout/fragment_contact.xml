<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="tk.refract.elert.main.Fragments.ContactFragment">

    <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/lvContacts" android:layout_gravity="center" android:choiceMode="singleChoice"
            android:visibility="visible"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="No Contacts Added"
            android:id="@+id/tvNoContacts" android:layout_gravity="center" android:visibility="visible"
            android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>

    <com.gc.materialdesign.views.ButtonFloat
            android:id="@+id/fltBtnAdd"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"
            android:layout_marginRight="24dp"
            app:animate="false"
            app:iconDrawable="@drawable/ic_add_white_24dp"
            android:background="#ff8bc34a"/>
</RelativeLayout>
